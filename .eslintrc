{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false,
    "__COVERAGE__": false
  },
  "rules": {
    "key-spacing": "off",
    "jsx-quotes": [2, "prefer-double"], //JSX中使用双引号
    "max-len": [2, 120, 2],
    "object-curly-spacing": [2, "always"],
    "comma-dangle": "off",
    "react/jsx-curly-spacing": [2, {"when": "never", "children": true}], //不要在JSX {} 引用括号里两边加空格
    "react/jsx-closing-bracket-location": [2, "line-aligned"],  //JSX对齐方式
    "react/jsx-wrap-multilines": [2]  //JSX多行元素用()包裹
  }
}
